<div class="col-xs-12 col-md-9 col-xl-10 flex-first flex-md-unordered pl-md-5">
  <div class="card my-4">
    <div class="card-img-top">
      <div id="carousel-indicators" class="carousel slide bg-inverse" data-ride="carousel">
        <ol class="carousel-indicators">
          {{#each images}}
            {{#if @first}}
              <li data-target="#carousel-indicators" data-slide-to="0" class="active"></li>
            {{else}}
              <li data-target="#carousel-indicators" data-slide-to= {{@index}}></li>
            {{/if}}
          {{/each}}
        </ol>


        <div class="carousel-inner" role="listbox">
          {{#each images}}
            {{#if @first}}
              <div class="carousel-item active">
                <img class="d-block card-img-top mx-auto" src= {{url}} alt="First slide">
              </div>
            {{else}}
              <div class="carousel-item">
                <img class="d-block card-img-top mx-auto" src= {{url}} alt="First slide">
              </div>
            {{/if}}
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carousel-indicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-indicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="card-block p-1">
      <div class="media my-auto">
        <div class="media-body px-4 align-self-center d-flex flex-column justify-content-around">
          <div class="py-2">
            <h1 class="card-title py-3">{{post.name}}</h1>
            <div class="clearfix">
              <div class="float-left">
                <p class="text-muted"><i class="fa fa-calendar" aria-hidden="true"></i> Дата: {{post.eventDate}}</p>
                <p class="text-muted"><i class="fa fa-user" aria-hidden="true"></i> Автор: <a href= {{post.organizerLink}}>{{post.organizerName}}</a></p>
              </div>
              <div class="float-right">
                <p class="text-muted"><i class="fa fa-podcast" aria-hidden="true"></i> Подкасты <a href="#">iTunes</a></p>
                <p class="text-muted"><i class="fa fa-rss" aria-hidden="true"></i> Использовать <a href="#">RSS</a></p>
              </div>
            </div>
            <div class="card-text py-2">

              <p class="about-text">
                {{post.brief}}
              </p>

              {{#each podcasts}}
                <h4 class="podcast-name">{{name}}</h4>
                <!-- 4:3 aspect ratio -->
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/M7lc1UVf-VE"></iframe>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

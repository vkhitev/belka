{{#if pagination.multiPages}}
  <nav aria-label="Page navigation">
    <ul class="pagination d-flex justify-content-center">

      <li class="page-item {{#if pagination.isFirst}}disabled{{/if}}"><a class="page-link" href="{{pagination.previousPage}}" {{#if pagination.isFirst}} tabindex="-1" {{/if}}>Предыдущая</a></li>

      {{#each pagination.pages}}
        <li class="page-item {{#if isActive}}active{{/if}}"><a class="page-link" href="{{url}}">{{page}}</a></li>
      {{/each}}

      <li class="page-item {{#if pagination.isLast}}disabled{{/if}}"><a class="page-link" href="{{pagination.nextPage}}">Следующая</a></li>
    </ul>
  </nav>
{{/if}}

{{#section 'scripts'}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js"></script>
  <script src="/js/edit-post.js"></script>
{{/section}}

<form>

  {{#each podcasts}}
    <div class="card my-4 bg-faded">
      <div class="card-block p-4">

        <div class="form-group w-50">
          <label for="inputPodcastName" class="fw-600">Название подкаста</label>
          <input type="text" class="form-control" id="inputPodcastName" aria-describedby="podcastNameHelp" placeholder="Название подкаста"
            value="{{name}}">
          <small id="podcastNameHelp" class="form-text text-muted">Введите название подкаста</small>
        </div>

        <div class="form-group w-50">
          <label for="inputSpeakerName" class="fw-600">Спикер</label>
          <input type="text" class="form-control" id="inputSpeakerName" aria-describedby="speakerNameHelp" placeholder="Спикер"
            value="{{speaker}}">
          <small id="speakerNameHelp" class="form-text text-muted">Введите имя спикера</small>
        </div>

        <div class="form-group">
          <label for="audio-stream" class="fw-600">Аудио</label>
          <input name="audioStream", type="file" class="form-control-file" id="audio-stream" aria-describedby="audioStreamHelp">
          <small id="audioStreamHelp" class="form-text text-muted">Выберите аудиодорожку</small>
        </div>

        <div class="form-group">
          <label for="presentation" class="fw-600">Презентация (PDF)</label>
          <input name="presentation" type="file" class="form-control-file" id="presentation" aria-describedby="presentationHelp">
          <small id="presentationHelp" class="form-text text-muted">Выберите презентацию</small>
        </div>

        {{!--<div class="form-group">
          <label for="presentation" class="fw-600">Отметки времени</label>
          <input type="time" class="form-control col-2" min="0:00" max="100:59">
        </div>--}}
      </div>
    </div>
  {{/each}}  

  <button type="button" class="btn btn-secondary">Добавить подкаст</button>

  <hr class="my-4">

  <div class="text-center" id="submit-block">
    <button type="submit" class="btn btn-primary">Принять изменения</button>
  </div>

</form>

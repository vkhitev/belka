{{!-- Карусель с фотографиями события --}}
<div id="photos-slider" class="carousel slide bg-inverse" data-ride="carousel">
  <ol class="carousel-indicators">
    {{#each postImages}}
      <li data-target="#photos-slider" data-slide-to= {{@index}} class="{{#if @first}}active{{/if}}"></li>
    {{/each}}
  </ol>

  <div class="carousel-inner" role="listbox">
    {{#each postImages}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <img class="d-block card-img-top mx-auto" src= {{url}} alt="First slide">
      </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#photos-slider" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#photos-slider" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
